{% extends 'base.html.twig' %}

{% block title %}Hello EpisodeController!{% endblock %}

{% block body %}
    <h1>Episodes of Season {{ seasonId }} âœ…</h1>

    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert"> {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <form method="post">
        <ul class="list-group">
            {% for episode in episodes %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Episode {{ episode.number }}
                    <input type="checkbox" name="watched[]" id="watched" value={{ episode.id }}
                           {% if episode.watched == true %}checked{% endif %}
                            {% if episode.watched == true %}disabled="true"{% endif %}
                    >
                </li>
            {% endfor %}
        </ul>
        <button class="btn btn-primary mt-2" type="submit">Save</button>
    </form>
{% endblock %}
