{% extends 'base.html.twig' %}

{% block title %} Seasons {% endblock %}

{% block body %}
        <h1>Seasons of the Serie "{{ serie }}"</h1>
        <ul class="list-group">
            {% for season in seasons %}
                <li class="list-group-item d-flex justify-content-between align-items-center">Season {{ season.number }}
                        <span class="badge bg-dark">{{ season.episodes|length }}</span>
                </li>
            {% endfor %}
        </ul>
{% endblock %}
