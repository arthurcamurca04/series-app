{% extends 'base.html.twig' %}

{% block title %} Series List!!{% endblock %}

{% block body %}
    <h1>Hello, Here it is your favorite TV series...</h1>

    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert"> {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <a class="btn btn-success mb-3" href={{ path("series-create-form") }}>Add new series</a>
    <ul class="list-group">
        {% for serie in series %}
            <li class="list-group-item d-flex justify-content-between align-items-center">{{ serie.name|e }}
                <form method="post" action={{ path('series-delete', {id:serie.id}) }}>
                    <input type="hidden" name="_method" value="DELETE">

                    <div class="d-flex">
                        <a href="{{ path("series-update-form", {id:serie.id})}}" class="btn btn-sm btn-primary me-1">E</a>
                        <button class="btn btn-sm btn-danger">x</button>
                    </div>
                </form>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
