{% extends 'base.html.twig' %}

{% block title %}{{ series is defined ? 'Edit' : 'Add'}} series{% endblock %}

{% block body %}
    <h1>{{ series is defined ? 'Edit' : 'Add'}} your favorite TV series</h1>
    {{ form_start(seriesForm) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(seriesForm) }}
    </div>

    <div class="row align-items-center">
            {{ form_row(seriesForm.name) }}
            {{ form_row(seriesForm.seasonsQuantity) }}
            {{ form_row(seriesForm.episodesQuantity) }}
            {{ form_row(seriesForm.coverImage) }}
            {{ form_widget(seriesForm.save, {'attr': {'class': 'btn-dark'}}) }}    </div>
    {{ form_end(seriesForm) }}
{% endblock %}

